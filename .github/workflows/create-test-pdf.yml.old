name: Create Test PDFs

# ------------------------------------------------------------------------------

on:
  push:
    paths:
    - '/tutorials/test'

  # Allows you to run this workflow manually from the Actions tab
  workflow_dispatch:

# ------------------------------------------------------------------------------

jobs:
  create-pdf-test:
    runs-on: ubuntu-latest
    name: Create PDF
    steps:
      - name: Checkout
        uses: actions/checkout@v2

      - name: Create PDF output dirs
        run: |
          mkdir -p pdf/test

      - name: Create Test PDF
        run: |
          npx -y md-to-pdf tutorials/test/README.md
          mv tutorials/test/README.pdf pdf/test/Test.pdf

      - name: List PDFs
        run: |
          ls -R pdf/test

      - name: Upload Test Artifacts
        uses: actions/upload-artifact@v2
        with:
          name: 'Test PDFs'
          path: 'pdf/test'
