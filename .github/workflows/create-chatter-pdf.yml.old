name: Create Chatter PDFs

# ------------------------------------------------------------------------------

on:
  push:
    paths:
    - '/chatter'

  # Allows you to run this workflow manually from the Actions tab
  workflow_dispatch:

# ------------------------------------------------------------------------------

jobs:
  create-pdf-test:
    runs-on: ubuntu-latest
    name: Create PDF
    steps:
      - name: Checkout
        uses: actions/checkout@v2

      - name: Create PDF output dirs
        run: |
          mkdir -p pdf/chatter

      - name: Create Chatter PDF
        run: |
          npx -y md-to-pdf chatter/build/README.md
          mv chatter/build/README.pdf pdf/chatter/Chatter-Buildguide.pdf

      - name: List PDFs
        run: |
          ls -R pdf/chatter

      - name: Upload Chatter Artifacts
        uses: actions/upload-artifact@v2
        with:
          name: 'Chatter Tutorials'
          path: 'pdf/chatter'
